<p id="notice"><%= notice %></p>

<h1>Listing Review Scheduled Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Task</th>
      <th>Start</th>
      <th>End</th>
      <th>Observation</th>
      <th>Comment to day</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @review_scheduled_tasks.each do |review_scheduled_task| %>
      <tr>
        <td><%= review_scheduled_task.date %></td>
        <td><%= review_scheduled_task.task_id %></td>
        <td><%= review_scheduled_task.start %></td>
        <td><%= review_scheduled_task.end %></td>
        <td><%= review_scheduled_task.observation %></td>
        <td><%= review_scheduled_task.comment_to_day %></td>
        <td><%= review_scheduled_task.user_id %></td>
        <td><%= link_to 'Show', review_scheduled_task %></td>
        <td><%= link_to 'Edit', edit_review_scheduled_task_path(review_scheduled_task) %></td>
        <td><%= link_to 'Destroy', review_scheduled_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

