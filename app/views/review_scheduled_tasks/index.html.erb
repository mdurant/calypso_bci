<%= render "home/dashboard"%>
<div class="container">
  <h1>Revisiones Scheduled Task</h1>
     <div class="row pull-right">
      <div class="col-md-12">
        <a href="<%= new_review_scheduled_task_path %>" class="btn btn-info">(+) Nueva Tarea</a>
      </div>
    </div>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Task</th>
        <th>Inicio</th>
        <th>Fin</th>
        <th>Observaciones</th>
        <th>Comentario General</th>
        <th>User ID</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @review_scheduled_tasks.each do |review_scheduled_task| %>
        <tr>
          <td><%= review_scheduled_task.date %></td>
          <td><%= review_scheduled_task.task_id %></td>
          <td><%= review_scheduled_task.start %></td>
          <td><%= review_scheduled_task.end %></td>
          <td><%= review_scheduled_task.observation %></td>
          <td><%= review_scheduled_task.comment_to_day %></td>
          <td><%= review_scheduled_task.user_id %></td>
          <td>
            <%= link_to 'Show', review_scheduled_task %>
            <%= link_to 'Edit', edit_review_scheduled_task_path(review_scheduled_task) %>
            <%= link_to 'Destroy', review_scheduled_task, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="row pull-right">
  <div class="col-md-12">
    <%= will_paginate @review_scheduled_task, renderer: BootstrapPagination::Rails %>    
  </div>
</div>


