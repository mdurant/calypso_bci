<div class="pull-right range-query">
  <div class="row pull-right">
    <div class="col col-md-12">
      <%= search_form_for @search, url: search_hitos_path, html: {class: "form-inline", method: :post} do |f| %>
        <div class="input-daterange">
          <div class="col-md-4">
            <%= f.text_field :date_from, class: "form-control datepicker", placeholder: "Desde" %>
          </div>
          <div class="col-md-4 col-md-offset-1">
            <%= f.text_field :date_end, class: "form-control datepicker", placeholder: "Hasta" %>
          </div>
        </div>

        <div class="col-md-2 col-md-offset-1 form-actions">
          <%= f.submit "Buscar", class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= sort_link @search, :area_id, "Negocio"%></th>
      <th>Evento</th>
      <th>Beneficios</th>
      <th><%= sort_link @search, :created_at, "Creado el"%></th>
    </tr>
  </thead>
  <tbody>
    <% @hitos.each do |hito| %>
    <% unless  hito.id.nil? %>
    <tr>
    <td><%= hito.area.title %></td>
    <td class="page-header"><b class="azul-title"><%= hito.title_evento %></b><br><ul> <small> <%= hito.description_evento %> </ul></small></td>
    <td><i class="fa fa-check"></i>  <%= hito.benefit %>
   
    </td>
    <td style="width:100px"><%= hito.created_at.strftime("%m/%d/%Y") %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>

</table>
  <div class="container">
    <div class="row pull-right">
      <div class="col-md-12">
         <%#   = will_paginate @hitos, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>