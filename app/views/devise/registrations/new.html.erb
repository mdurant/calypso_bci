<div class="container top-body">
  <div class="login-box">
    <div class="login-box-body">
    <h2>Nuevo Uusuario</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: :true }, :html=>{:class=>"form-sigin"}) do |f| %>
      
    
      <div class="form-group">
        <%= f.label :username, 'Nombre de Usuario' %><br />
        <%= f.text_field :username, autofocus: true, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control"%>
      </div>
      
      <div class="form-group">
        <%= f.label :image, "Fotografía" do %> <br>
        <%= f.file_field :image, class: "form-control"  %>
        <%= f.hidden_field :image_cache %>
        <% end %>
        <% # = image_tag(@hito.image) if @hito.image? %>
      </div>
    
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation,'Repetir Password' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    <p>
      <div class="actions">
        <%= f.submit "Dar de Alta!", class: "btn-block btn btn-primary" %>
      </div>
    </p>
    <% end %>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
