<%= render "home/dashboard"%>
<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Lista de Hitos</h1>
  <div class="row pull-right">
    <div class="col-md-12">
      <a href="<%= new_deed_path %>" class="btn btn-info">(+) Nuevo HITO </a>
    </div>
  </div>
  <table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Título</th>
      <th>Área Negocio</th>
      <th>Fecha Informada</th>
      <th>Opciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deeds.each do |deed| %>
      <tr>
        <td><%= deed.title %></td>
        <td><%= deed.area.title %></td>
        <td><%= deed.date_deed.strftime("%m/%d/%Y") %></td>
        <td>
          <%= link_to 'Ver', deed , class:"btn btn-info"%>
          <%= link_to 'Editar', edit_deed_path(deed), class:"btn btn-warning" %>
          <%= link_to 'Eliminar', deed, method: :delete, data: { confirm: '¿Está Seguro?' }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row pull-right">
  <div class="col-md-12">
    <%= will_paginate @deeds, renderer: BootstrapPagination::Rails %>
  </div>
</div>

</div>


