<%= render "home/dashboard"%>
<div class="container">
<p id="notice"><%= notice %></p>

<h1>Lista de Categorías</h1>
<div class="row pull-right">
  <div class="col-md-12">
    <%= link_to '(+) Nueva Categoría', new_category_path, class: "btn btn-info" %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripción</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.description %></td>
        <td>
          <%= link_to 'Ver', category, class:"btn btn-info" %>
          <%= link_to 'Editar', edit_category_path(category), class:"btn btn-warning" %>
          <%= link_to 'Eliminar', category, method: :delete, data: { confirm: '¿Está seguro?' }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="row pull-right">
  <div class="col-md-12">
    <%= will_paginate @categories, renderer: BootstrapPagination::Rails %>
  </div>
</div>
<br>
  
</div>
</div>
