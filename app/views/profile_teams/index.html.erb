<%= render "home/dashboard"%>
<div class="container">
  <div class="row pull-right">
    <div class="col-md-12">
      <a href="<%= new_profile_team_path %>" class="btn btn-info">(+) Nuevo Miembro Equipo </a>
    </div>
  </div>
</div>
<div class="container">
  <h1>Listado miembros Calypso</h1>
<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Teléfono</th>
        <th>Celular</th>
        <th>Anexo</th>
        <th>Lugar Oficina</th>
        <th>Foto</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>
  
    <tbody>
      <% @profile_teams.each do |profile_team| %>
        <tr>
          <td><%= profile_team.name %></td>
          <td><%= profile_team.email %></td>
          <td><%= profile_team.phone %></td>
          <td><%= profile_team.celular %></td>
          <td><%= profile_team.anexo %></td>
          <td><%= profile_team.address_work %></td>
          <td><%= image_tag profile_team.image.url(:extra_thumb).to_s, class: "img-responsive" %></td>
          <td>
            <%= link_to 'Ver', profile_team, class:"btn btn-info" %>
            <%= link_to 'Editar', edit_profile_team_path(profile_team), class:"btn btn-warning" %>
            <%= link_to 'Eliminar', profile_team, method: :delete, data: { confirm: '¿Estás seguro?' }, class:"btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
  
</div>
</div>


